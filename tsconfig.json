{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/types": ["src/types/index"],
      "@/screens/*": ["src/screens/*"],
      "@/components/*": ["src/components/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
